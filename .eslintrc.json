{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react/exhaustive-deps": "off",
    "import/no-anonymous-default-export": "off",
    "@next/next/no-img-element": "off"
  },
  "ignorePatterns": [
    ".next/**",
    "out/**",
    "build/**",
    "next-env.d.ts"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}